<div class="create-listing-page">
  <div class="container">
    <div class="form-container">
      <header class="form-header">
        <div class="header-logo-section">
          <%= link_to image_tag('logo.svg', class: 'logo-icon'), root_path, class: 'logo-link' %>
        </div>
      </header>

      <div class="form-main">
        <h2 class="form-title">プロモーションの情報を入力</h2>
        <%= form_with model: @promotion, local: true do |f| %>

        <%= render 'shared/error_messages', model: @promotion %>
          <div class="img-upload">
            <div class="weight-bold-text">
              商品画像 <span class="required-badge">必須</span>
            </div>
            
            <div class="click-upload">
              <%= f.label :promotion_image, 'クリックしてファイルをアップロード', class: 'upload-label' %>
              <%= f.file_field :promotion_image, id: 'item-image', class: 'file-input' %>
            </div>
          </div>

          <div class="new-items">
            <div class="form-group">
              <div class="weight-bold-text">
                プロモーション名 <span class="required-badge">必須</span>
              </div>
              <%= f.text_area :title, class: "items-text", id: "item-name", placeholder: "プロモーション名（必須 40文字まで)", maxlength: "40" %>
            </div>
            <div class="form-group">
              <div class="items-explain">
                <div class="weight-bold-text">
                  プロモーションの説明 <span class="required-badge">必須</span>
                </div>
                <%= f.text_area :content, class: "items-text", id: "item-description", placeholder: "プロモーションの説明（必須 1,000文字まで）", rows: "7", maxlength: "1000" %>
              </div>
            </div>
          </div>

          <div class="sell-price">
            <div class="weight-bold-text question-text">
              掲載開始日<span class="required-badge">必須</span>
            </div>
            <%= f.datetime_select :starts_at, class: "price-input", id: "item-price",add_month_number: true, minute_step: 10, prompt: "---" %>
            
          </div>

          <div class="sell-price">
            <div class="weight-bold-text question-text">
              掲載終了日<span class="optional-badge">任意</span>
            </div>
            <%= f.datetime_select :ends_at, class: "price-input", id: "item-price",add_month_number: true, minute_step: 10, prompt: "---" %>
            
          </div>

          <div class="sell-price">
            <div class="weight-bold-text question-text">
              プロモーション先のURL<span class="required-badge">必須</span>
            </div>
            <%= f.text_area :url, class: "price-input", id: "item-price",placeholder: "プロモーションURL" %>
          </div>

          <%# ボタンセクション %>
          <div class="form-actions">
            <%= f.submit "登録する", class: "submit-button" %>
            <%= link_to 'もどる', promotions_path, class: "cancel-button" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
