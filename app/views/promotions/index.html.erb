<%= render "shared/second-header" %>

<div class="container">
  <%# 商品管理画面 全体レイアウト %>
  <div class="card-layout">

    <%# ヘッダー部分：タイトル %>
    <div class="card-header">
      <h1 class="app-title">DemoEC プロモーション管理</h1>
    </div>
    <%# /ヘッダー部分：タイトル %>

    <%# 出品した商品一覧 %>
    <div class="item-list-container">

      <%# お知らせの見出し %>
      <div class="item-list-header">
        <div>
          <h2 class="section-title">作成したプロモーション一覧</h2>
          <p class="section-description">
            プロモーションの一覧です。<%= @promotions.length %>個の商品が見つかりました。
          </p>
        </div>

        <%# 登録ボタン %>
        <div class="list-header-actions">
          <%= link_to 'プロモーションを登録する', new_promotion_path, class: "new-item-button" %>
        </div>
        <%# /登録ボタン %>
      </div>
      <%# /お知らせの見出し %>

      <%# お知らせテーブル %>
      <div class="item-table">
        <table>
          <thead>
            <tr>
              <th>お知らせ名</th>
              <th>説明</th>
              <th>掲載開始日時</th>
              <th>掲載終了日時</th>
              <th>アクション</th>
            </tr>
          </thead>
          <tbody>
            <% @promotions.each do |promotion|%>
            <%# 商品のインスタンス変数になにか入っている場合、中身のすべてを展開できるようにしましょう %>
              <tr>
                <%# 商品名・画像の表示 %>
                <td class="item-col">
                  <div class="item-info">
                    <div class="item-avatar">
                      <div>
                        <%= image_tag promotion.promotion_image, class: 'item-image' if promotion.promotion_image.attached? %>
                        <% if promotion[:is_published] %>
                          <%# 商品が売れている場合は "在庫なし" を表示 %>
                            <div class="sold-out">
                              <span>掲載なし</span>
                            </div>
                          <%# /商品が売れている場合は "在庫なし" を表示 %>
                        <% end %> 
                      </div>
                    </div>
                    <div class="item-details">
                      <span class="item-name"><%= promotion.title %></span>
                    </div>
                  </div>
                </td>
                <%# /商品名・画像の表示 %>
              
                <%# 販売価格の表示 %>
                <td class="price-col">
                  <%= promotion.content %>
                </td>
                <%# /販売価格の表示 %>

                <%# 掲載開始日の表示 %>
                <td class="category-col">
                  <%= l promotion.starts_at, format: :notification %>
                </td>
                <%# /掲載開始日の表示 %>

                <%# 掲載終了日の表示 %>
                <td class="category-col">
                  <% if promotion.ends_at %>
                    <%= l promotion.ends_at, format: :notification %>
                  <% else %>
                    ---
                  <% end %>
                </td>
                <%# /掲載終了日の表示 %>

                <%# アクションボタン（編集・削除） %>
                <td class="actions-col">
                  <%= link_to '編集', edit_promotion_path(promotion), { class: 'admin-action-button' } %>
                  <%= link_to '削除', promotion_path(promotion), { class: 'admin-action-button', data: { turbo_method: :delete } } %>
                </td>
                <%# /アクションボタン（編集・削除） %>
                
              </tr>
            <% end %>
            <%# 商品のインスタンス変数になにか入っている場合、中身のすべてを展開できるようにしましょう %>

          </tbody>
        </table>
      </div>
      <%# /商品テーブル %>

    </div>
    <%# /出品した商品一覧 %>

  </div>
  <%# /商品管理画面 全体レイアウト %>
</div>
