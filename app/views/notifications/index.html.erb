<%= render "shared/second-header" %>

<div class="container">
  <%# 商品管理画面 全体レイアウト %>
  <div class="card-layout">

    <%# ヘッダー部分：タイトル %>
    <div class="card-header">
      <h1 class="app-title">DemoEC お知らせ管理</h1>
    </div>
    <%# /ヘッダー部分：タイトル %>

    <%# 出品した商品一覧 %>
    <div class="item-list-container">

      <%# お知らせの見出し %>
      <div class="item-list-header">
        <div>
          <h2 class="section-title">作成したお知らせ一覧</h2>
          <p class="section-description">
            お知らせの一覧です。<%= @notifications.length %>個の商品が見つかりました。
          </p>
        </div>

        <%# 登録ボタン %>
        <div class="list-header-actions">
          <%= link_to 'お知らせを登録する', new_notification_path, class: "new-item-button" %>
        </div>
        <%# /登録ボタン %>
      </div>
      <%# /お知らせの見出し %>

      <%# お知らせテーブル %>
      <div class="item-table">
        <table>
          <thead>
            <tr>
              <th>お知らせ名</th>
              <th>説明</th>
              <th>登録日</th>
              <th>アクション</th>
            </tr>
          </thead>
          <tbody>
            <% @notifications.each do |notification|%>
            <%# 商品のインスタンス変数になにか入っている場合、中身のすべてを展開できるようにしましょう %>
              <tr>
                <%# 商品名・画像の表示 %>
                <td class="item-col">
                  <div class="item-details">
                    <span class="item-name"><%= notification.title %></span>
                  </div>
                </td>
                <%# /商品名・画像の表示 %>
              
                <%# 販売価格の表示 %>
                <td class="price-col">
                  <%= notification.content %>
                </td>
                <%# /販売価格の表示 %>

                <%# 掲載開始日の表示 %>
                <td class="category-col">
                  <%= l notification.starts_at, format: :short %>
                </td>
                <%# /掲載開始日の表示 %>

                <%# 掲載終了日の表示 %>
                <td class="category-col">
                  <%= l notification.ends_at, format: :short %>
                </td>
                <%# /掲載終了日の表示 %>

                <%# アクションボタン（編集・削除） %>
                <td class="actions-col">
                  <%= link_to '編集', edit_notification_path(notification), { class: 'admin-action-button' } %>
                  <%= link_to '削除', "#", { class: 'admin-action-button', data: { turbo_method: :delete } } %>
                </td>
                <%# /アクションボタン（編集・削除） %>
                
              </tr>
            <% end %>
            <%# 商品のインスタンス変数になにか入っている場合、中身のすべてを展開できるようにしましょう %>

          </tbody>
        </table>
      </div>
      <%# /商品テーブル %>

    </div>
    <%# /出品した商品一覧 %>

  </div>
  <%# /商品管理画面 全体レイアウト %>
</div>
